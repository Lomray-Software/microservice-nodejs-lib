		"husky": "^7.0.2",
		"lint-staged": "^11.1.2",
		"mocha": "^9.1.1",
		"nyc": "^15.1.0",
		"prettier": "^2.4.1",
		"semantic-release": "^18.0.0",
		"sinon": "^11.1.2",
		"sinon-chai": "^3.7.0",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"typescript": "^4.4.3"
