		"@types/lodash": "^4.14.175",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.9.6",
		"@types/sinon": "^10.0.4",
		"@types/sinon-chai": "^3.2.5",
		"chai": "^4.3.4",
		"eslint": "^7.32.0",
