{
	"name": "@lomray/microservice-nodejs",
	"version": "1.0.0",
	"description": "Package for create microservice architecture based on NodeJS & inverted json.",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"type": "module",
	"keywords": [
		"node",
		"js",
		"microservice",
		"inverted",
		"json",
		"gateway",
		"worker",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lomray/microservice-nodejs.git"
	},
	"bugs": {
		"url": "https://github.com/lomray/microservice-nodejs/issues"
	},
	"homepage": "https://github.com/lomray/microservice-nodejs",
